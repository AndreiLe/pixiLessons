{
  "extends": "eslint-config-airbnb-base",
  "env": {
    "browser": true,
    "jest": true
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "rules": {
    "comma-dangle": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    // fix
    "no-mixed-operators": 0,
    "linebreak-style": 0,
    "no-underscore-dangle": 0,
    "class-methods-use-this": 0,
    //"spaced-comment": 0,
    "no-plusplus": 0,
    "space-before-function-paren": 0
  }
}
